<div class="modal fade" id="snapchatModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title">Connect Snapchat</h4>
			</div>
			<div class="modal-body">

				<label for="username">Username</label>
				<input id="username" maxlength="40" type="text" /><br>

                <label for="views">Estimated Followers</label>
				<input id="views" maxlength="40" type="number" /><br>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				<button type="button" class="btn btn-primary" id="snapchatSaveBtn">Save</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
